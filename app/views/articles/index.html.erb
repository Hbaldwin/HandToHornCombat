<h1>All HTHC Posts</h1>
<hr>

<% @articles.each do |article| %>
  <div class = "row">
    
    <div class="col-md-3">
      <section class = "user_info center">
        <%= gravatar_for article.user, size: 100 %>
        <h5> <%= article.user.username %> </h5>
      </section>
    </div>
    
    <div class="col-lg-8 well">
      <h4><%= link_to article.title, article_path(article) %></h4>
      <p><%= article.summary %></p>
      <p>
        <span class='quiet'><small><%= time_ago_in_words(article.created_at) %> ago</small></span>
      </p>
      
    </div>
    
  </div>
<% end %>